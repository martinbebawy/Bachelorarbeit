<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LowContrast" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonThemeLowContrast</item>
    </style>

    <style name="Theme.MiddleContrast" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonThemeMiddleContrast</item>
    </style>

    <style name="Theme.HighContrast" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonThemeHighContrast</item>
    </style>

    <style name="FontSizeSmall">
        <item name="android:textSize">19dp</item>
    </style>

    <style name="FontSizeMedium">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="FontSizeLarge">
        <item name="android:textSize">25dp</item>
        //nicht sp verwenden; systemweite Einstellungen der Schriftgröße sollen nicht berücksichtig
        werden
    </style>

    <style name="ButtonThemeLowContrast" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="ButtonThemeMiddleContrast" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="ButtonThemeHighContrast" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/rounded_shape_border</item>
    </style>


</resources>